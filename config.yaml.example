broker:
  use_sandbox: true
  currency: "rub"
  min_sandbox_cash_rub: 12000
  log_file: "logs/bot.log"
  class_code: "TQBR"
  trades_csv: "logs/trades.csv"

  retry_tries: 3
  retry_sleep_min: 1.0
  retry_sleep_max: 10.0

  sandbox_pay_in_rub: 100000.0

universe:
  tickers: ["SBER", "GAZP", "LKOH", "GMKN", "TATN", "NVTK", "ROSN", "ALRS"]

schedule:
  tz: "Europe/Moscow"
  start_trade: "10:20"
  stop_new_entries: "18:05"
  flatten_time: "18:40"

strategy:
  lookback_minutes: 180
  k_atr: 1.2
  take_profit_pct: 0.004
  stop_loss_pct: 0.006
  time_stop_minutes: 45

risk:
  max_lot_cost_rub: 3500
  max_day_loss_rub: 100
  max_trades_per_day: 3
  max_positions: 1
  max_active_orders_per_figi: 1

runtime:
  sleep_sec: 55
  error_sleep_sec: 10
  max_consecutive_errors: 8

telegram:
  enabled: true
